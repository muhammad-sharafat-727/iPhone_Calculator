<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="#000000">

    <!-- Display Area -->
    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:gravity="end|bottom"
        android:text="0"
        android:padding="8dp"
        android:singleLine="true"/>

    <!-- Row 1: ( ) mc m+ m- mr -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <Button
            android:id="@+id/btn_open_bracket"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:backgroundTint="#808080"
            android:text="("
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button android:id="@+id/btn_close_bracket"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text=")"/>

        <Button android:id="@+id/btn_mc"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:text="mc"/>

        <Button android:id="@+id/btn_m_plus"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:text="m+"/>

        <Button android:id="@+id/btn_mr"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:text="mr"/>
    </LinearLayout>

    <!-- Row 2: 2nd x² x³ xⁿ eˣ 10ˣ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:baselineAligned="false"
        android:layout_marginTop="4dp">

        <Button android:id="@+id/btn_second"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="2nd"/>


        <Button android:id="@+id/btn_square"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="x²"
            android:textStyle="bold"/>

        <Button android:id="@+id/btn_cube"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"

            android:textSize="20sp"
            android:padding="0dp"
            android:text="x³"/>

        <Button android:id="@+id/btn_power"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="xⁿ"
            />



        <Button android:id="@+id/btn_exp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="eˣ"/>

        <Button
            android:id="@+id/btn_ten_power"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#808080"
            android:padding="0dp"
            android:text="10ˣ"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Row 3: ¹/x ³√ √ ʸ√ ln log₁₀ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:baselineAligned="false"
        android:layout_marginTop="4dp">

        <Button android:id="@+id/btn_reciprocal"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="1/x"/>

        <Button android:id="@+id/btn_cube_root"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:padding="0dp"
            android:text="∛"/>

        <Button android:id="@+id/btn_sqrt"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:padding="0dp"
            android:text="√"/>

        <Button android:id="@+id/btn_y_root"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="ʸ√"/>

        <Button android:id="@+id/btn_ln"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="ln"/>

        <Button android:id="@+id/btn_log"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="log₁₀"/>
    </LinearLayout>

    <!-- Row 4: x! sin cos tan e EE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:baselineAligned="false"
        android:layout_marginTop="4dp">

        <Button android:id="@+id/btn_factorial"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="x!"/>

        <Button android:id="@+id/btn_sin"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="sin"/>

        <Button android:id="@+id/btn_cos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="cos"/>

        <Button android:id="@+id/btn_tan"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="tan"/>

        <Button android:id="@+id/btn_e"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="e"/>

        <Button android:id="@+id/btn_ee"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="EE"/>
    </LinearLayout>

    <!-- Row 5: Rand sinh cosh tanh π Rad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:baselineAligned="false"
        android:layout_marginTop="4dp">

        <Button android:id="@+id/btn_rand"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="Rand"/>

        <Button android:id="@+id/btn_sinh"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="0dp"
            android:text="sinh"/>

        <Button android:id="@+id/btn_cosh"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="cosh"/>

        <Button android:id="@+id/btn_tanh"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="tanh"/>

        <Button android:id="@+id/btn_pi"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="π"/>

        <Button android:id="@+id/btn_rad"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="Rad"/>
    </LinearLayout>

    <!-- Row 6: AC +/- % ÷ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:baselineAligned="false"
        android:layout_marginTop="4dp">

        <Button android:id="@+id/btn_ac"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:backgroundTint="#ffa500"
            android:text="AC"/>

        <Button android:id="@+id/btn_sign"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#ffa500"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"

            android:text="+/-"/>

        <Button android:id="@+id/btn_percent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#ffa500"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="%"/>

        <Button android:id="@+id/btn_divide"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#ffa500"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="÷"/>
    </LinearLayout>

    <!-- Row 7: 7 8 9 × -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:baselineAligned="false"
        android:layout_marginTop="4dp">

        <Button android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="7"/>

        <Button android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="8"/>

        <Button android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="9"/>

        <Button android:id="@+id/btn_multiply"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#ffa500"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="×"/>
    </LinearLayout>

    <!-- Row 8: 4 5 6 - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:baselineAligned="false"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:backgroundTint="#808080"
            android:padding="0dp"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="5"/>

        <Button android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="6"/>

        <Button android:id="@+id/btn_subtract"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#ffa500"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:padding="0dp"
            android:text="-"/>
    </LinearLayout>

    <!-- Row 9: 1 2 3 + -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:baselineAligned="false"
        android:layout_marginTop="4dp">

        <Button android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="1"/>

        <Button android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="2"/>

        <Button android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="3"/>

        <Button android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="+"/>
    </LinearLayout>

    <!-- Row 10: 0 . = -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:baselineAligned="false"
        android:layout_marginTop="4dp">

        <Button android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="0"/>

        <Button android:id="@+id/btn_decimal"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:text="."/>

        <Button android:id="@+id/btn_equals"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="0dp"
            android:backgroundTint="#ffa500"
            android:text="="/>
    </LinearLayout>
</LinearLayout>